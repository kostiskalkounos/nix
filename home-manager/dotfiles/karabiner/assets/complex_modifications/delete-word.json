{
  "title": "Delete Word",
  "rules": [
    {
      "description": "Ctrl-Backspace to delete-backward-word",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "delete_or_backspace",
            "modifiers": {
              "mandatory": ["left_control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "delete_or_backspace",
              "modifiers": ["left_option"]
            }
          ]
        }
      ]
    }
  ]
}
